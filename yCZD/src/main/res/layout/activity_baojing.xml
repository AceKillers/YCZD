<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/nva_bg">

        <TextView
            android:id="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="10dp"
            android:text="报警查询"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="@drawable/ic_back"
            android:visibility="gone"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/baojing"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:gravity="center"
        android:background="@drawable/baojing_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/num_baojing"
            android:layout_width="wrap_content"
            android:drawableTop="@drawable/zhengdongbaojing"
            android:layout_height="wrap_content"
            android:textColor="#fc790a"
            android:drawablePadding="10dp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/yujing"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:gravity="center"
        android:background="@drawable/baojing_bg"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/num_yujing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/yujing"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:textColor="#ea3e81"/>
    </LinearLayout>
</LinearLayout>