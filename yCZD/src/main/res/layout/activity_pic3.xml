<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/nva_bg">

        <TextView
            android:id="@+id/et_mach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/arrow_down"
            android:text="选择机组"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/back"
            android:text="实时监测"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="@drawable/ic_back" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/pic">


        <TextView
            android:id="@+id/tv_nox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/tv_nox_left"
            android:layout_marginTop="@dimen/tv_nox_top"
            android:textColor="#000"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/tv_so2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nox"
            android:layout_marginLeft="@dimen/tv_so2_left"
            android:layout_marginTop="@dimen/tv_so2_top"
            android:textColor="#000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_pywd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tv_pywd_left"
            android:layout_marginTop="@dimen/tv_pywd_top"
            android:textColor="#000"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/tv_gsll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pywd"
            android:layout_marginLeft="@dimen/tv_gsll_left"
            android:layout_marginTop="@dimen/tv_gsll_top"
            android:textColor="#000"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/tv_njswd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/tv_njswd_bottom"
            android:layout_marginRight="@dimen/tv_njswd_right"
            android:textColor="#000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_djckwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_njswd"
            android:layout_marginRight="@dimen/tv_djckwd_right"
            android:layout_toLeftOf="@id/tv_njswd"
            android:textColor="#000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_gjckwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_njswd"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/tv_gjckwd_left"
            android:textColor="#000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_gjrkwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_njswd"
            android:layout_marginLeft="@dimen/tv_gjrkwd_left"
            android:layout_toRightOf="@id/tv_gjckwd"
            android:textColor="#000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_dypqwd1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_dypqwd2"
            android:layout_marginRight="@dimen/tv_dypqwd1_right"
            android:layout_toLeftOf="@+id/tv_dypqwd2"
            android:textColor="#000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_zryl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_nox"
            android:layout_marginLeft="@dimen/tv_zqyl_left"
            android:textColor="#000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_zqyl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_zryl"
            android:layout_below="@id/tv_zryl"
            android:layout_marginTop="@dimen/tv_zryl_top"
            android:textColor="#000"
            android:textSize="12dp" />

        <!--
        <TextView
            android:id="@+id/tv_zk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView13"
            android:layout_toRightOf="@+id/textView13"
            android:text="tv_zk"
            android:textColor="#000"
            android:visibility="visible"
            android:textSize="12dp" />
        -->


        <TextView
            android:id="@+id/tv_zrqw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_nox"
            android:layout_marginLeft="@dimen/tv_zrqw_left"
            android:layout_toRightOf="@id/tv_zryl"
            android:textColor="#000"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/tv_zqwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_zqyl"
            android:layout_alignLeft="@id/tv_zrqw"
            android:layout_below="@id/tv_zrqw"
            android:textColor="#000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_dypqwd2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/tv_dypqwd2_right"
            android:layout_marginTop="@dimen/tv_dypqwd2_top"
            android:textColor="#000"
            android:textSize="12dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#eee"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_jzfh"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_zqll"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_zk"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="12dp" />
    </LinearLayout>

</LinearLayout>